<div class="row">
    <% if current_page?(signup_path) %>
        <div class="col-4">
            <%= button_to "Sign Up with Google", '/auth/google_oauth2', class: "btn btn-google" %>
        </div>
        <div class="col">
            <%= button_to "Sign Up with Facebook", '/auth/facebook', class: "btn btn-facebook" %>
        </div>
    <% else %>
        <div class="col-4">
            <%= button_to "Log in with Google", '/auth/google_oauth2', class: "btn btn-google"%>
        </div>
        <div class="col">
            <%= button_to "Log in with Facebook", '/auth/facebook', class: "btn btn-facebook"%>
        </div>
    <% end %>
</div>