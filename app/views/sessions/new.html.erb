<div class="container page_padding">
  <% if flash[:error] %>
    <div class="container-fluid">
      <div class="row mb-3">
        <div class="col d-flex justify-content-center">
          <div class="alert alert-danger d-flex align-items-center py-2 " role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
              <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
            </svg>
            <div>
              <%= flash[:error] %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-6">
      <picture>
        <img src="login.svg" class="img-fluid" alt="illustration of man opening door">
      </picture>
    </div>
    <div class="col-5 login_form_padding">
      <div class="row text-left">
        <ul class="list-inline">
          <li class="list-inline-item h4">Login</li>
          <li class="list-inline-item">or <%= link_to "create an account", signup_path, class: "alt_button custom_link" %></li>
        </ul>
      </div>
      <% if flash[:message] %>
        <div class="container-fluid px-3">
          <div class="row d-inline-flex">
            <!-- <div class="col"> -->
            <div class="alert alert-warning py-1" id="incorrect_credentials" role="alert">
              <%= flash[:message] %>
            </div>
            <!-- </div> -->
          </div>
        </div>
      <% end %>
      <div class="form-group">
        <%= form_tag login_path do %>
          <div class="row mb-3">
            <div class="col-7">
              <%= text_field_tag :email, nil, placeholder: "Email", class: "form-control" %>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-7">
              <%= password_field_tag :password, nil, placeholder: "Password", class: "form-control" %>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col">
              <%= submit_tag "Log In", class: "btn btn-custom" %>
            </div>
          </div>
        <% end %>
        <%= render "application/omniauth" %>
      </div>
    </div>
  </div>
</div>
