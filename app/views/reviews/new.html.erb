<div class="container my-auto form_container">
  <div class="row">
    <div class="d-flex flex-row nopadding">
      <h3 class="page_title">Write a New Review</h3>
      <h5 class="movie_title_padding_review">for <%= @movie.title %></h5>
    </div>
  </div>
  <%= form_for [@movie, @review] do |f| %>
    <div class="form-group mx-auto">
      <%= render partial: "form", locals: {f: f} %>
    </div>
    <div class="row">
      <div class="col nopadding">
        <%= f.submit "Submit", class: "btn btn-custom mt-3" %>
      </div>
    </div>
  <% end %>
</div>
