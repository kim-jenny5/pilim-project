<div class="row">
  <%= review.title %>
</div>
<div class="row">
  <% unless review.rating.blank? %>
    <div class="d-flex flex-row star_row_padding">
      <span class="star_sizing">⭐️</span>
      <%= review.rating %>/5
    </div>
  <% end %>
</div>
<div class="row">
  <div class="review_comment">
    <%= review.comment %>
  </div>
</div>
