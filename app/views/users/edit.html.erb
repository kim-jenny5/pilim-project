<div class="container my-auto" id="edit_profile_container">
  <div class="row mb-3">
    <div class="d-flex justify-content-center">
      <h2 class="page_title">Edit your profile ‚úçüèª</h2>
    </div>
  </div>
  <%= render partial: "application/error_messages", locals: { term: @user } %>
  <%= form_for @user do |f| %>
    <div class="form-group mx-auto">
      <div class="row">
        <div class="col first_last_name">
          <p><%= f.text_field :first_name, placeholder: "First Name", class: "form-control" %></p>
        </div>
        <div class="col first_last_name">
          <p><%= f.text_field :last_name, placeholder: "Last Name", class: "form-control" %></p>
        </div>
      </div>
      <div class="row mt-2">
        <div class="container">
          <div class="input-group">
            <div class="col-1 d-flex justify-content-center">
              <span class="input-group-text">@</span>
            </div>
            <div class="col">
                <%= f.text_field :username, placeholder: "Username", class: "form-control" %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col mt-3 d-flex justify-content-center">
          <p><%= f.submit "Save", class: "btn btn-custom" %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
