<div class="container float-start my-5">
  <% if flash[:error] %>
    <div class="container-fluid">
      <div class="row mb-3">
        <div class="col d-flex justify-content-center">
          <div class="alert alert-danger d-flex align-items-center py-2 " role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
              <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
            </svg>
            <div>
              <%= flash[:error] %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-3 text-end">
      <h3 class="username_font">@<%= @user.username %></h3>
      <span class="joined_date">Joined: <%= @user.joined %></span>
      <ul class="nav flex-column">
        <li class="nav-item">
          <%= link_to "#{@user.username}'s Reviews", user_reviews_path(@user), {class: "custom_link"} %>
        </li>
      </ul>
    </div>
    <div class="col-8 mt-4">
      <span class="someones_list"><%= @user.username %>'s Lists üìù</span>
      <div class="row row-cols-1 row-cols-3 g-4">
        <% @user.lists.each do |list| %>
          <div class="col">
            <div class="card h-100">
              <div class="card-body">
                <h5 class="card-title"><%= link_to list.title, list_path(list), {class: "custom_link"} %></h5>
                <p class="card-text"><%= list.description %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
